<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MovieSelect">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/movie">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/black">

            <Button
                android:id="@+id/btn1"
                android:layout_width="311dp"
                android:layout_height="71dp"
                android:layout_marginStart="51dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="386dp"
                android:layout_marginEnd="74dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="281dp"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="@font/aclonica"
                android:text="See Details"
                android:textColor="#FDF8F8"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/search_movie"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/heading"
        android:fontFamily="@font/kavoon"
        android:hint="SEARCH FOR MOVIE"
        android:padding="15dp"
        android:textColor="#090909" />

    <Button
        android:id="@+id/btn"
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:layout_below="@+id/search_movie"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/marko_one"
        android:text="Give Review"
        android:textColor="#FAF3F2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btr"
        android:layout_width="175dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="130dp"

        android:layout_marginBottom="120dp"
        android:backgroundTint="#9F5870"
        android:fontFamily="@font/lemon"
        android:text="LOGOUT"
        android:textColor="#0E0D0D"
        android:textSize="24sp" />

</RelativeLayout>