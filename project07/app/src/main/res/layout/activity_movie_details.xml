<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6B8C2"
    tools:context=".movie_details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/aclonica"
        android:text="Movie Details"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="180dp"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/archivo_black"
        android:text="Name: "
        android:textAlignment="center"
        android:textColor="#0B0505"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="260dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="186dp"
        android:layout_toRightOf="@+id/name_txt"
        android:fontFamily="@font/lemon"
        android:textColor="#0E0E0E"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/name_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_txt"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/candal"
        android:text="Type: "
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/edit1"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@+id/name_txt1"
        android:fontFamily="@font/lemon"
        android:textColor="#0B0A0A"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/name_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_txt1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/carter_one"
        android:text="Rank: "
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/edit2"
        android:layout_width="269dp"
        android:layout_height="57dp"
        android:layout_below="@id/edit1"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="47dp"
        android:layout_toRightOf="@+id/name_txt"
        android:fontFamily="@font/lemon"
        android:textColor="#090909"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/name_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_txt2"
        android:layout_alignStart="@+id/edit4"
        android:layout_marginStart="-26dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/fredoka_one"
        android:text="Actors: "
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/edit3"
        android:layout_width="257dp"
        android:layout_height="63dp"
        android:layout_below="@id/edit2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/name_txt3"
        android:fontFamily="@font/kavoon"
        android:textColor="#0C0C0C"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/edit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/name_txt4"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#9F5870"
        android:fontFamily="@font/lemon"
        android:text="Back"
        android:textColor="#0E0D0D"
        android:textSize="24sp"
         />

</RelativeLayout>